.flex.items-center.justify-center
  .px-8.py-6.mt-4.text-left.bg-gradient-to-r.from-purple-500.to-pink-500
    %h3.text-2xl.font-bold.text-center Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f|
      = render "devise/shared/error_messages", resource: resource
      %h2 All fields are required
      .mt-4
        %div
          %label.block{for: 'phone'} Phone
          = f.phone_field :phone, autofocus: true, autocomplete: "phone", placeholder: 'Phone', type: 'text',
          class: 'w-96 px-4 py-2 mt-2.border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600'
        .mt-4
          %label.block{for: 'phone'} First Name
          = f.phone_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: 'First Name', type: 'text',
          class: 'w-full px-4 py-2 mt-2.border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600'
        .mt-4
          %label.block{for: 'phone'} Last Name
          = f.phone_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: 'Last Name', type: 'text',
          class: 'w-full px-4 py-2 mt-2.border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600'
        .mt-4
          %label.block{for: 'password'} Password
          = f.password_field :password, autocomplete: "current-password", placeholder: 'Password', type: 'password',
            class: 'w-full px-4 py-2 mt-2.border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600'
        .mt-4
          %label.block{for: 'password_confirmation'} Password
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password confirmation', type: 'password',
            class: 'w-full px-4 py-2 mt-2.border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600'
        .flex.items-baseline.justify-between
          = f.button "Sign up", class: 'px-6 py-2 mt-4 text-white bg-blue-600 rounded-lg hover:bg-blue-900'
          = link_to "Have account?", new_session_path(resource_name), class: 'text-sm text-blue-600 hover:underline'
